<Window x:Class="FruVa.Ordering.Ui.Views.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:viewmodels="clr-namespace:FruVa.Ordering.Ui.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Orders"
        Height="600"
        Width="900"
        MinHeight="400"
        MinWidth="700">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Give me an Article"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"
                   Foreground="#333333"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Search" VerticalAlignment="Center" Margin="0,0,10,0"
                       FontSize="16" Foreground="#555555"/>
            <TextBox x:Name="SearchTextBox" Width="280" Height="30"
                     Text="Tomate 600g NL"
                     Padding="5" VerticalContentAlignment="Center"
                     BorderBrush="#CCCCCC" BorderThickness="1" />
        </StackPanel>


        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
            <RadioButton Content="Article" GroupName="TypeSelection" IsChecked="True"
                         Margin="0,0,20,0" FontSize="16" Foreground="#555555"/>
            <RadioButton Content="Recipient" GroupName="TypeSelection"
                         FontSize="16" Foreground="#555555"/>
        </StackPanel>

        <TextBlock Grid.Row="3" Text="- Gibt eine Liste von ausgewählten Elementen zurück"
                   FontStyle="Italic" Margin="0,0,0,15"
                   FontSize="14" Foreground="#777777"/>


        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto"
                      BorderBrush="#DDDDDD" BorderThickness="1"
                      Padding="10" Background="White">
            <DataGrid x:Name="FilterDataGrid"
                      ItemsSource="{Binding FilterItems}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Extended"
                      SelectionUnit="FullRow"
                      Margin="10"
                      BorderBrush="#DDDDDD" BorderThickness="1">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="40">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding DisplayName}"
                                        IsReadOnly="True"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>


        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Apply" Width="100" Height="30" Margin="5,0"/>
            <Button Content="Cancel" Width="100" Height="30" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>